<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MetWorksWeather.ViewModels"
             x:Class="MetWorksWeather.Pages.MainDeviceViews.MainView1812x2176"
             Title="Weather Station"
             x:DataType="viewmodels:LargeFormatWeatherViewModel"
             BackgroundColor="{StaticResource PurpleVikings}">

    <Grid Margin="0" Padding="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" StrokeThickness="0">
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="5">
                <Label 
                        FontSize="32"
                        Margin="0,0,0,0"
                        TextColor="{StaticResource GoldVikings}"
                        VerticalTextAlignment="End" 
                        HorizontalTextAlignment="Center"
                        Text="Temp" 
                />
                <Label
                        FontSize="20" 
                        Margin="0,0,0,0" 
                        TextColor="{StaticResource GoldVikings}"
                        HorizontalTextAlignment="Center" 
                        Text="{Binding TemperatureUnit}"
                />
                <Label 
                        FontSize="200" 
                        Margin="0,-50,0,0" 
                        TextColor="White"
                        HorizontalTextAlignment="Center" 
                        Text="{Binding TemperatureValue}"
                />
            </VerticalStackLayout>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="5" StrokeThickness="0">
            <VerticalStackLayout 
                HorizontalOptions="Center" 
                VerticalOptions="Start" 
                Spacing="0" 
                Margin="0,0,0,0">
                <Label 
                        FontSize="100"
                        Margin="0,0,0,0"
                        TextColor="{StaticResource GoldVikings}" 
                        VerticalTextAlignment="End" 
                        HorizontalTextAlignment="Center"
                        Text="{Binding TimeDayOfWeek}" 
                />
                <Label 
                        FontSize="80"
                        Margin="0,-10,0,0"
                        TextColor="{StaticResource GoldVikings}"
                        HorizontalTextAlignment="Center" 
                        Text="{Binding TimeDateDisplay}"
                />
                <Label
                        FontSize="100" 
                        Margin="0,0,0,0" 
                        TextColor="White" 
                        HorizontalTextAlignment="Center" 
                        Text="{Binding TimeDisplay}"
                />
            </VerticalStackLayout>
        </Border>

        <Border Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" StrokeThickness="0">
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                <Label 
                        FontSize="32" 
                        Margin="0,-120,0,0"
                        TextColor="{StaticResource GoldVikings}" 
                        VerticalTextAlignment="End"
                        HorizontalTextAlignment="Center" 
                        Text="Wind" 
                />
                <HorizontalStackLayout 
                        Spacing="5" 
                        HorizontalOptions="Center"
                        Margin="0,-5,0,0" 
                >
                    <Label 
                            FontSize="20" 
                            TextColor="{StaticResource GoldVikings}"
                            Text="{Binding WindDirectionCardinal}" 
                    />
                    <Label
                            FontSize="20" 
                            TextColor="{StaticResource GoldVikings}"
                            Text="{Binding WindDirectionDegrees}" 
                    />
                </HorizontalStackLayout>
                    <Label
                            FontSize="20" 
                            Margin="0,-12,0,0" 
                            TextColor="{StaticResource GoldVikings}"
                            HorizontalTextAlignment="Center" 
                            Text="{Binding WindSpeedUnit}"
                    />
                    <Label 
                            FontSize="200" 
                            Margin="0,-70,0,0" 
                            TextColor="White"
                            HorizontalTextAlignment="Center" 
                            Text="{Binding WindSpeedValue}" 
                    />
            </VerticalStackLayout>
        </Border>

        <!-- ROW 3: BOTTOM HEADERS -->
        <Border Grid.Row="3" Grid.Column="0" StrokeThickness="0">
            <Label FontSize="32" TextColor="{StaticResource GoldVikings}"  
                   VerticalTextAlignment="End" HorizontalTextAlignment="Center"
                   Text="Humidity" />
        </Border>

        <Border Grid.Row="3" Grid.Column="2" StrokeThickness="0">
            <Label FontSize="32" TextColor="{StaticResource GoldVikings}"  
                   VerticalTextAlignment="End" HorizontalTextAlignment="Center"
                   Text="UV Index" />
        </Border>

        <!-- ROW 4: BOTTOM VALUES -->
        <Border Grid.Row="4" Grid.Column="0" StrokeThickness="0">
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="5">
                <Label FontSize="24" TextColor="{StaticResource GoldVikings}"
                       HorizontalTextAlignment="Center" Text="{Binding HumidityUnit}" />
                <Label FontSize="180" TextColor="White"
                       HorizontalTextAlignment="Center" Text="{Binding HumidityValue}" />
            </VerticalStackLayout>
        </Border>

        <Border Grid.Row="4" Grid.Column="2" StrokeThickness="0">
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="5">
                <Label FontSize="24" TextColor="{StaticResource GoldVikings}"
                       HorizontalTextAlignment="Center" Text=" " />
                <Label FontSize="180" TextColor="White"
                       HorizontalTextAlignment="Center" Text="{Binding UvIndexValue}" />
            </VerticalStackLayout>
        </Border>

    </Grid>
</ContentPage>