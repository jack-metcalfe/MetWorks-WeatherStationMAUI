<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>false</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <RootNamespace>MetWorksWeather.Models</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core dependencies for models -->
    <ProjectReference Include="..\enum_definitions\enum_definition.csproj" />
    <ProjectReference Include="..\RedStar.Amounts\RedStar.Amounts\RedStar.Amounts.csproj" />
    <ProjectReference Include="..\utility\Utility.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <ServiceAssemblyOutputPath>..\..\ServiceAssemblies</ServiceAssemblyOutputPath>
  </PropertyGroup>
  <Target Name="CopyToServiceAssemblies" AfterTargets="Build">
    <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(ServiceAssemblyOutputPath)" SkipUnchangedFiles="false" />
  </Target>
</Project>