<?xml version = "1.0" encoding = "UTF-8" ?>
<Application
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MetWorks.Apps.MAUI.WeatherStationMaui"
    x:Class="MetWorks.Apps.MAUI.WeatherStationMaui.App"
    xmlns:converters="clr-namespace:MetWorks.Apps.Maui.WeatherStationMaui.UITools.Converters;"
>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/WeatherColors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:AirTemperatureFormatter x:Key="AirTemperatureFormatter" />
            <converters:QuantityFormatter x:Key="QuantityFormatter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
