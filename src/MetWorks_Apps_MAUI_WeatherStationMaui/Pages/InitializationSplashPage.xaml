<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MetWorks.Apps.MAUI.WeatherStationMaui.Pages.GuestPages"
             x:Class="MetWorks.Apps.MAUI.WeatherStationMaui.Pages.InitializationSplashPage"
             Title="Starting...">
    <VerticalStackLayout Padding="20" Spacing="12" VerticalOptions="Center">
        <Label x:Name="StatusLabel" Text="Starting..." HorizontalOptions="Center" />
        <ActivityIndicator x:Name="Spinner" IsRunning="True" IsVisible="True" />
        <Button x:Name="RetryButton" Text="Retry Initialization" IsVisible="False" />
        <Label x:Name="DetailsLabel" Text="" HorizontalOptions="Center" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>
