             xmlns:viewmodels="clr-namespace:MetWorks.Apps.MAUI.WeatherStationMaui.ViewModels"
             x:Class="MetWorks.Apps.MAUI.WeatherStationMaui.Pages.GuestPages.MetricsOne2176x1812"
             x:DataType="viewmodels:MetricsOneViewModel"
>
    <Grid Margin="0" Padding="12" RowSpacing="0" ColumnSpacing="0">
