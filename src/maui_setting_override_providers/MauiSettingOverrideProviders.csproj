<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<!-- Update to supported MAUI workloads -->
		<TargetFrameworks>net10.0</TargetFrameworks>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- Opt into preview features -->
		<EnablePreviewFeatures>false</EnablePreviewFeatures>
		<LangVersion>preview</LangVersion>

		<!-- Platform support -->
		<SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net10.0-windows10.0.19041.0'">10.0.19041.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="'$(TargetFramework)' == 'net10.0-windows10.0.19041.0'">10.0.19041.0</TargetPlatformMinVersion>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Maui.Controls"/>
		<PackageReference Include="YamlDotNet"/>
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\settings_override_structures\SettingsOverrideStructures.csproj" />
	  <ProjectReference Include="..\utility\Utility.csproj" />
	</ItemGroup>

	<PropertyGroup>
		<ServiceAssemblyOutputPath>..\..\ServiceAssemblies</ServiceAssemblyOutputPath>
	</PropertyGroup>
	<Target Name="CopyToServiceAssemblies" AfterTargets="Build">
		<Copy SourceFiles="$(TargetPath)" DestinationFolder="$(ServiceAssemblyOutputPath)" SkipUnchangedFiles="false" />
	</Target>
</Project>
