    <ProjectReference Include="..\RedStar.Amounts.StandardUnits\RedStar.Amounts.StandardUnits\RedStar.Amounts.StandardUnits.csproj" />
    <ProjectReference Include="..\RedStar.Amounts.WeatherExtensions\RedStar.Amounts.WeatherExtensions.csproj" />
